<% provide :title, t(".title") %>
<% provide :button_text, t(".button_text") %>
<h1><%= t ".hello" %></h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for @category do |f| %>
      <%= render "shared/error_messages", object: f.object %>
      <%= f.label :name, t(".name") %>
      <%= f.text_field :name, class: "form-control" %>

      <%= f.label :parent_id, t(".parent") %>
      <%= f.select :parent_id,
        options_for_select(@categories.collect{|u| [u.name, u.id]}), {}, {size: Settings.category.list_size} %>

      <%= f.submit yield(:button_text), class: "btn btn-success" %>
    <% end %>
  </div>
</div>
