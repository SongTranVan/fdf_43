<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to t("logo_link"), root_path, class: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to t("home_link"), root_path %></li>
        <li><%= link_to t("help_link"), help_path %></li>
        <% if logged_in? %>
        <li class="dropdown">
          <%= link_to "#", "data-toggle": "dropdown", class: "dropdown-toggle" do %>
            <%= t "account_text" %> <b class="caret"></b>
          <% end %>
          <ul class="dropdown-menu">
            <li><%= link_to t("profile_link"), current_user %></li>
            <li><%= link_to t("setting_link"), edit_user_path(current_user) %></li>
            <li class="divider"></li>
            <li>
              <%= link_to t("logout_link"), logout_path, method: :delete %>
            </li>
          </ul>
        </li>
        <% else %>
          <li><%= link_to t(".login"), login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
