<% provide :title, t(".title") %>
<h1><%= t ".header" %></h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for @product, url: admin_products_path do |f| %>
      <%= render "shared/error_messages", object: f.object %>

      <%= f.label :name, t("admin.products.name_lb") %>
      <%= f.text_field :name, class: "form-control" %>

      <%= f.label :description, t("admin.products.description_lb") %>
      <%= f.text_field :description, class: "form-control" %>

      <%= f.label :price, t("admin.products.price_lb") %>
      <%= f.number_field :price, class: "form-control" %>

      <%= f.label :quantity, t("admin.products.quantity_lb") %>
      <%= f.number_field :quantity, class: "form-control" %>

      <%= f.label :product_type, t("admin.products.type_lb") %>
      <%= f.select :category_id, "<option>food</option><option>drink</option>".html_safe %>

      <%= f.label :category_id, t("admin.products.category_lb") %>
      <%= f.select :category_id,
        options_for_select(@categories.collect{|u| [u.name, u.id]}), {}, {size: Settings.category.list_size} %>

      <%= f.label :images, t("admin.products.image_lb") %>
      <%= f.file_field :images, multiple: true %>

      <%= f.submit t(".submit"), class: "btn btn-success" %>
    <% end %>
  </div>
</div>
